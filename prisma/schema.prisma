generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String
  role          Role   @default(USER)
  Goal          Goal[]

  @@map("users")
}

enum Role {
  USER
  ADMIN
  MODERATOR
}

model Goal {
  id          String    @id @default(uuid())
  description String?
  isCompleted Boolean   @default(false)
  deadline    DateTime
  created_at  DateTime  @default(now())
  user_id     String
  title       String
  user        User      @relation(fields: [user_id], references: [id])
  SubTasks    SubTask[]

  @@map("goals")
}

model SubTask {
  id          String @id @default(uuid())
  description String
  goal_id     String
  goal        Goal   @relation(fields: [goal_id], references: [id])

  @@map("subtasks")
}


